{{#bs-modal onHidden=nullifyModalInfo size="lg" as |modal|}}
  {{#modal.header}}
    <h3 class="modal-title">{{data.title}} <small class="text-muted">Author: <em>{{data.author}}</em></small></h3>
  {{/modal.header}}
  {{#modal.body}}
    {{! These are just here as an example of an if-else tree }}
    {{#if (is-link data.post_hint)}}
      <p class="lead">Didn't to links lul</p>
    {{else if (is-clip data.post_hint)}}
      <p class="lead">Didn't do clips lul</p>
    {{else if (is-image data.post_hint)}}
      <img class="card-img-top" src={{data.preview.images.0.source.url}} alt="Failed to load image">
    {{/if}}

    {{#if data.selftext}}
      {{markdown-to-html data.selftext}}
    {{/if}}
  {{/modal.body}}
  {{#modal.footer}}
    {{#if comments}}
      {{post-comments data=comments.1.data}}
    {{else if showProgress}}
      <div class="progress full-width">
        <div class="full-width progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    {{else}}
      <button onclick={{action 'loadComments'}} class="btn btn-default btn-block">Load Comments</button>
    {{/if}}
  {{/modal.footer}}
{{/bs-modal}}
